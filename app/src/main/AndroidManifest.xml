<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adrian.mymvpexample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.view.MainActivity" />
        <activity android:name=".apteligent.view.ApteligentActivity" />
        <activity android:name=".omdb.view.OmdbApiActivity" />
        <activity android:name=".jsonplaceholder.view.JsonPlaceholderApiActivity" />
        <activity android:name=".base.BaseActivity"></activity>
    </application>

</manifest>